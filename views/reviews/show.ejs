<%- include('../partials/header') %>

  <section>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
          <th>Review</th>
          <th>Overall Rating</th>
          <th>Course Difficulty</th>
          <th>Overall Condition</th>
        </tr>
      </thead>
      <tbody>
        <tr class="review-content">
          <td class="review-user"><img src="<%= review.userAvatar %>" alt="avatar" referrerpolicy="no-referrer">&nbsp;
            <%= review.userName %>
          </td>
          <td>
            <%= review.createdAt.toLocaleDateString() %>
          </td>
          <td>
            <%- review.content.replaceAll('\n', '<br>' ) %>
          </td>
          <td>
            <%= review.overallRating %>
          </td>
          <td>
            <%= review.condition %>
          </td>
          <td>
            <%= review.difficulty %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="show-review-image">
      <img src="<%= review.image %>">
    </div>
  </section>

  <section class="comments-show">
    <h3>Comments</h3>
    <% if (review.comments.length) { %>
      <% review.comments.forEach(function(c) { %>
        <div class="comment-user"><img src="<%= review.userAvatar %>" alt="avatar" referrerpolicy="no-referrer">&nbsp;
          <%= review.userName %>
        </div>
        <div>
          <p>
            <%- c.content.replaceAll('\n', '<br>' ) %>
          </p>
        </div>
        <div></div>
        <% }) %>
          <% } else { %>
            <p><strong>No Comments</strong></p>
            <% } %>
  </section><br>

  <section class="comments-form">
    <form action="reviews/<%= review._id %>/comments" method="POST"><textarea name="content"></textarea>
      <button type="submit">Add Comment</button>
    </form>
  </section>
  <%- include('../partials/footer') %>