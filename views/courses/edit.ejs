<%- include('../partials/header'); %>

<form id="update-course-form" action="/courses/<%= course._id %>?_method=PUT" method="POST">
  <label>Course Name:</label>
  <input type="text" name="name" value="<%= course.name %>" required><br>
  <label>Course Length:</label>
  <input type="number" name="length" value="<%= course.length %>" required><br>
  <label>Hole Count:</label>
  <select name="holeCount">
    <option value="9">9</option>
    <option value="18" selected>18</option>
  </select><br>
  <label>Course Type:</label>
  <select name="courseType">
    <option value="Public" selected>Public</option>
    <option value="Private">Private</option>
  </select><br>
  <label>Location:</label>
  <input type="text" name="location" value="<%= course.location %>" required><br>
  <label>Image URL:</label>
  <input type="text" name="image" value="<%= course.image %>"><br>
  <button type="submit">Update Course</button>
</form>

<%- include('../partials/footer'); %>