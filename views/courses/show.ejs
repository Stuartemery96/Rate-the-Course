<%- include('../partials/header') %>

  <h1>
    <%= course.name %>
  </h1>
  <section>
    <img src="<%= course.image %>">
    <div>
      <p>Holes: <strong>
          <%= course.holeCount %>
        </strong>
      </p>
    </div>
    <div>
      <p>Type: <strong>
          <%= course.courseType %>
        </strong>
      </p>
    </div>
    <div>
      <p>Rating: <strong>Rating Code HERE</strong>
      </p>
    </div>
    </div>
    <div>
      <h3>
        <%= course.name %>
      </h3>
    </div>
    <div>
      <p>location: <strong>
          <%= course.location %>
        </strong>
      </p>
    </div>
  </section>

  <section>
    <% if (course.reviews.length) { %>
      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>Date</th>
            <th>Review</th>
            <th>Overall Rating</th>
            <th>Course Difficulty</th>
            <th>Overall Condition</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% let total=0 %>
            <% course.reviews.forEach(function(r) { %>
              <% total +=r.overallRating %>
                <tr class="review-content">
                  <td class="review-user"><img src="<%= r.userAvatar %>" alt="avatar"
                      referrerpolicy="no-referrer">&nbsp;<%= r.userName %>
                  </td>
                  <td>
                    <%= r.createdAt.toLocaleDateString() %>
                  </td>
                  <td>
                    <%= r.content %>
                  </td>
                  <td>
                    <%= r.overallRating %>
                  </td>
                  <td>
                    <%= r.condition %>
                  </td>
                  <td>
                    <%= r.difficulty %>
                  </td>
                </tr>
                <% }); %>
                  <tr>
                    <td colspan="2"></td>
                    <td><strong>
                        <%= (total / course.reviews.length).toFixed(1) %>
                      </strong></td>
                  </tr>
        </tbody>
      </table>
      <% } else { %>
        <h5>No Reviews Yet</h5>
        <% } %>
  </section>



  <% if (user) { %>
    <form action="/courses/<%= course._id %>/reviews" method="POST">
      <label>Review:</label>
      <textarea name="content"></textarea><br>
      <label>Overall Rating:</label>
      <select name="overallRating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5" selected>5</option>
      </select><br>
      <label>Course Difficulty:</label>
      <select name="difficulty">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5" selected>5</option>
      </select><br>
      <label>Course Condition:</label>
      <select name="condition">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5" selected>5</option>
      </select><br>
      <label>Image URL:</label>
      <input type="text" name="image"><br>
      <button type="submit">Add Review</button>
    </form>
    <% } %>
      <%- include('../partials/footer') %>