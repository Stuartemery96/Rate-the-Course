<%- include('../partials/header') %>

  <h1>
    <%= course.name %>
  </h1>
  <img src="<%= course.image %>">
  <div>
    <p>Length: <strong>
        <%= course.length %>
      </strong></p>
  </div>
  <div>
    <p>Rating: <strong>
        <%= rating %>
      </strong>
    </p>
  </div>
  <div>
    <p>Holes: <strong>
        <%= course.holeCount %>
      </strong>
    </p>
  </div>
  <div>
    <p>Difficulty: <strong>
        <%= difficulty %>
      </strong></p>
  </div>
  <div>
    <p>Condition: <strong>
        <%= condition %>
      </strong></p>
  </div>
  <div>
    <p>Type: <strong>
        <%= course.courseType %>
      </strong>
    </p>
  </div>

  <section>
    <br><br>
    <% if (course.reviews.length) { %>
      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>Date</th>
            <th>Review</th>
            <th>Overall Rating</th>
            <th>Course Difficulty</th>
            <th>Overall Condition</th>
            <th></th>
          </tr>
        </thead>
        <% course.reviews.forEach(function(r) { %>
          <tbody>
            <tr class="review-content">
              <td class="review-user"><img src="<%= r.userAvatar %>" alt="avatar" referrerpolicy="no-referrer">&nbsp;<%=
                  r.userName %>
              </td>
              <td>
                <%= r.createdAt.toLocaleDateString() %>
              </td>
              <td>
                <a href="/courses/<%= course._id %>/reviews/<%= r._id %>">
                  <%= r.content %>
                </a>
              </td>
              <td>
                <%= r.overallRating %>
              </td>
              <td>
                <%= r.condition %>
              </td>
              <td>
                <%= r.difficulty %>
              </td>
            </tr>
            <% }); %>

          </tbody>
          </a>
      </table>
      <% } else { %>
        <h5>No Reviews Yet</h5>
        <% } %>
  </section>
  <a href="/courses/<%= course._id %>/reviews/new">New Review</a>
  <%- include('../partials/footer') %>