<%- include('../partials/header'); %>
<br><br>
<form id="new-form" action="/courses" method="POST">
  <label>Course Name:</label>
  <input type="text" name="name" required><br>
  <label>Course Length:</label>
  <input type="number" name="length" required><br>
  <label>Hole Count:</label>
  <select name="holeCount">
    <option value="9">9</option>
    <option value="18" selected>18</option>
  </select><br>
  <label>Course Type:</label>
  <select name="courseType">
    <option value="Public" selected>Public</option>
    <option value="Private">Private</option>
  </select><br>
  <label>Location:</label>
  <input type="text" name="location" placeholder="City, ST" required><br>
  <label>Image URL:</label>
  <input type="text" name="image"><br>
  <button id="play-btn" type="submit">Add Course</button>
</form>

<script>
  const sounds = {
    golf: 'https://cdn.freesound.org/previews/20/20428_50975-lq.mp3'
  }

  document.getElementById('play-btn').addEventListener('click', handlePlaySound);
  const player = new Audio();

  player.volume = .5;

  function handlePlaySound() {
    playSound('golf');
  }

  function playSound(name) {
    player.src = sounds[name];
    player.play();
  }
</script>

